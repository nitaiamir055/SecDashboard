# SEC EDGAR polite-access header
# Required by the SEC — use your real name and email address
SEC_USER_AGENT="SEC-Pulse Dashboard your@email.com"

# Ollama — local LLM backend
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2:3b-instruct-q8_0

# How often to poll the SEC EDGAR feed (seconds)
POLL_INTERVAL_SECONDS=5

# Maximum characters of filing text passed to the LLM per call
FILING_TEXT_MAX_CHARS=20000

# LLM response timeout (seconds) — increase for slower/larger models
SLM_TIMEOUT_SECONDS=180

# Max simultaneous filing downloads
MAX_CONCURRENT_DOWNLOADS=8
